<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Teks ucapan selamat datang -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat datang!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Tombol-tombol dashboard -->
        <Button
            android:id="@+id/btnToProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produk"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnToCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnToUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengguna"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnToCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pelanggan"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnToSupplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pemasok"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnToSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penjualan"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnToPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembelian"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnToSalesReportByProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laporan Penjualan per Produk"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnToSalesSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ringkasan Penjualan"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keluar"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
