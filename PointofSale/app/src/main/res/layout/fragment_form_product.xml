<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product.FormProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Hapus Produk"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_dark" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Produk" />

            <EditText
                android:id="@+id/edtItemCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kode Item (unik)" />

            <Button
                android:id="@+id/btnScanBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Barcode" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/edtStockQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stok (jumlah)"
                android:inputType="number" />

            <EditText
                android:id="@+id/edtPurchasePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Beli"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/edtSellingPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Jual"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/edtProductImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Link Gambar (opsional)" />

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btnPickImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar"
                android:layout_marginBottom="16dp" />


            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Simpan Produk"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
